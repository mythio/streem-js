{
	"compilerOptions": {
		"target": "es6",
		"module": "commonjs",
		"lib": ["ES6", "DOM"],
		"types": ["node", "reflect-metadata"],
		"outDir": "dist",
		"rootDir": "src",
		"removeComments": true,
		"esModuleInterop": true,
		"sourceMap": true,
		"typeRoots": ["node_modules/@types"],
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true
	},
	"exclude": ["node_modules"],
	"include": ["src/**/*.ts"]
}
